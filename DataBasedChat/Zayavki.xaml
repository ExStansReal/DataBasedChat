<Window x:Class="DataBasedChat.Zayavki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBasedChat"
        mc:Ignorable="d"
          Title="Заявки в друзья" Height="450" Width="668" ResizeMode="CanMinimize">
    <Grid Background="Gray">
        <Border BorderBrush="White" BorderThickness="1" Margin="5" CornerRadius="5" Background="DarkGray">
            <StackPanel Margin="10" Orientation="Horizontal">
                <StackPanel Width="450">
                    <TextBlock FontSize="20" Text="Заявления:" TextAlignment="Center"/>
                    <ListView x:Name="zayavki" FontSize="20" Width="430" MaxHeight="363" MinHeight="363"/>

                </StackPanel>

                <StackPanel Margin="5,0,5,0">
                    <Button Content="Принять заявку" BorderBrush="White"  FontSize="20" Click="Button_Click_1"/>
                    <Button Content="Откланить заявку" BorderBrush="White"  FontSize="20" Margin="0,10,0,0" Click="Button_Click_2"/>
                    <Button Content="Назад" BorderBrush="White" Margin="0,10,0,0" FontSize="20" Click="Button_Click"/>
                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</Window>
