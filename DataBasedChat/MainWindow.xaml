<Window x:Class="DataBasedChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBasedChat"
        mc:Ignorable="d"
        Title="Авторизация" Height="241" Width="254" ResizeMode="CanMinimize">
    <Grid Background="Gray">
        <Border BorderBrush="White" BorderThickness="1" Margin="5" CornerRadius="5" Background="DarkGray">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Логин" FontSize="20"/>
                <TextBox x:Name="login" Width="184" Height="30" FontSize="20"/>
                <TextBlock Text="Пароль"  FontSize="20"/>
                <PasswordBox x:Name="password" Width="184" Height="30"  FontSize="20"/>
                <Button Content="Войти" Width="77" Margin="0,5,0,5" BorderBrush="White"  FontSize="20"/>
                <Button Content="Зарегистрироваться" BorderBrush="White"  FontSize="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
