<Window x:Class="DataBasedChat.FindFriends"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBasedChat"
        mc:Ignorable="d"
        Title="FindFriends" Height="450" Width="658" ResizeMode="CanMinimize">
    <Grid Background="Gray">
        <Border BorderBrush="White" BorderThickness="1" Margin="5" CornerRadius="5" Background="DarkGray">
            <StackPanel Margin="10" Orientation="Horizontal">
                <StackPanel Width="450">
                    <TextBlock FontSize="20" Text="Доступные пользователи:" TextAlignment="Center"/>
                    <ListView FontSize="20" Width="450" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </StackPanel>
               
                <StackPanel Margin="5,0,5,0">
                    <Button Content="Отправить заявку" BorderBrush="White"  FontSize="20"/>
                    <Button Content="Назад" BorderBrush="White" Margin="0,10,0,0" FontSize="20" Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
            
        </Border>
    </Grid>
</Window>
