<Window x:Class="DataBasedChat.Change_User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBasedChat"
        mc:Ignorable="d"
        Title="Изменить данные" Height="332" Width="800" ResizeMode="CanMinimize">
    <Grid Background="Gray">
        <Border BorderBrush="White" BorderThickness="1" Margin="5" CornerRadius="5" Background="DarkGray">
            <StackPanel Margin="10">
                <TextBlock x:Name="FIO" FontSize="20" Text="Фио:" TextAlignment="Center"/>
                <TextBlock FontSize="20" Text="Ваш логин" TextAlignment="Center" Margin="0,10,0,0"/>
                <TextBox x:Name="log" Margin="5" Height="30" FontSize="20" />
                <TextBlock FontSize="20" Text="Ваш пароль" TextAlignment="Center"  Margin="0,10,0,0"/>
                <TextBox x:Name="pas" Margin="5" Height="30" FontSize="20" />
                <Button Content="Изменить данные" BorderBrush="White"  FontSize="20" Margin="0,10,0,0" Click="Button_Click"/>
                <Button Content="Назад" BorderBrush="White"  FontSize="20" Margin="0,10,0,0" Click="Button_Click_1"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
